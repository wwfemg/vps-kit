{
    # 全局配置：調整緩衝區大小，優化網絡傳輸
    order forward_proxy before reverse_proxy
}

MY_DOMAIN {
    # 自動申請證書 (腳本會自動替換 MY_EMAIL)
    tls MY_EMAIL

    route {
        # === 第一層：NaiveProxy 隱身通道 ===
        # 只有通過了用戶名密碼驗證的流量，才會進入這裡
        forward_proxy {
            basic_auth NAIVE_USER NAIVE_PASS
            hide_ip
            hide_via
            probe_resistance
        }

        # === 第二層：Xray / 3x-ui 面板 ===
        # 所有不符合 Naive 驗證的流量，全部甩給 3x-ui 面板
        # 這樣你在瀏覽器輸入域名，看到的是面板，而不是報錯
        reverse_proxy localhost:UI_PORT
    }
}
